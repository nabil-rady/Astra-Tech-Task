                                    "image": {
                                        "type": "string",
                                        "example": "http://localhost:8000/404.png"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "This is a nice product"
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 15.7
                                    },
                                    "quantity": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "category_id": {
                                        "description": "Id of category that the product belongs to",
                                        "type": "integer",
                                        "example": 1
                                    }
